<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.AllCtegories">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/back_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/button_back" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:src="@drawable/profile_icon" />
        
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="30sp"
        android:fontFamily="@font/adamina"
        android:textAllCaps="true"
        android:padding="10dp"/>


    ::::::::::::::::::::::
    <RelativeLayout
        android:id="@+id/MonumentHestorique_id"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/backround_card_catego_green">

            <TextView
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="25dp"
                android:text="Monument Hestorique"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:text="expand_all"
                android:textColor="@color/black" />


        </RelativeLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/menupicturemonument"
            android:layout_marginTop="-30dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    ::::::::::::::::::::::
    <RelativeLayout
        android:id="@+id/restaurant_id"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/backround_card_catego_yellow">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="25dp"
                android:text="Restaurant"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:text="expand_all"
                android:textColor="@color/black" />


        </RelativeLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/categories_restaurant_icon"
            android:layout_marginTop="-30dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    ::::::::::::::::::::::
    <RelativeLayout
        android:id="@+id/Hotel_id"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/backround_card_catego_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="25dp"
                android:text="Hotel"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:text="expand_all"
                android:textColor="@color/black" />


        </RelativeLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/categorie_hotel"
            android:layout_marginTop="-30dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    ::::::::::::::::::::::
    <RelativeLayout
        android:id="@+id/shop_id"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backround_card_catego">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="25dp"
                android:text="Shop"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:text="expand_all"
                android:textColor="@color/white" />


        </RelativeLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/categories_shop_icon"
            android:layout_marginTop="-30dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    ::::::::::::::::::::::

    <RelativeLayout
        android:id="@+id/statios_id"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backround_card_catego_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="25dp"
                android:text="Station transport"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:text="expand_all"
                android:textColor="@color/black" />


        </RelativeLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/categories_rent_car_icon"
            android:layout_marginTop="-50dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    ::::::::::::::::::::::
    <RelativeLayout
        android:id="@+id/Hospital_id"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backround_card_catego_green">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="25dp"
                android:text="Hospitale"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:padding="20dp"
                android:text="expand_all"
                android:textColor="@color/black" />


        </RelativeLayout>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/categorie_hospital_image"
            android:layout_marginTop="-30dp"
            android:padding="20dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>





</LinearLayout>
</ScrollView>