<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.restaurante.Restaurant"
    android:background="@drawable/background_image"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentt"
            android:padding="20dp"
            >
            <ImageView
                android:id="@+id/back_pressed"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/button_back" />
            <ImageView
                android:background="@drawable/profile_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:id="@+id/Login_SiningUp"
                android:padding="5dp"
                android:onClick="callRetailerScreen" />





        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant"
            android:textSize="30sp"
            android:fontFamily="@font/adamina"
            android:textAllCaps="true"
            android:padding="10dp"/>

<androidx.cardview.widget.CardView
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="30dp"
    android:elevation="10dp">

        <ImageView
            android:id="@+id/lost"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/thelost">

        </ImageView>


</androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:elevation="10dp"

            >
            <ImageView
                android:id="@+id/operaa"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/opera">

            </ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"

            android:elevation="10dp"

            >
            <ImageView
                android:id="@+id/bazare"
                android:layout_width="match_parent"
                android:layout_height="180dp" android:background="@drawable/bazar">

            </ImageView>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"

            android:elevation="10dp"

            >
            <ImageView
                android:id="@+id/ralia"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/ghalia">

            </ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"

            android:elevation="10dp"

            >
            <ImageView
                android:id="@+id/tarbouche"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/tarbouch">

            </ImageView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="30dp"

            android:elevation="10dp"

            >
            <ImageView
                android:id="@+id/momtauche"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/momtauch">

            </ImageView>
        </androidx.cardview.widget.CardView>



    </LinearLayout>




</ScrollView>