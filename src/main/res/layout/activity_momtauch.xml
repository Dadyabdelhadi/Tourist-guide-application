<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background_image"
    tools:context=".user.restaurante.momtauch">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentt"
            android:padding="20dp"
            >
            <ImageView
                android:id="@+id/back_pressed"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/button_back" />
            <ImageView
                android:background="@drawable/profile_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:id="@+id/Login_SiningUp"
                android:padding="5dp"
                android:onClick="callRetailerScreen" />



        </RelativeLayout>
        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider_mamtouch"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="20"
            app:iss_delay="1000"
            app:iss_error_image="@color/green_yellow"
            android:layout_margin="20dp"
            app:iss_period="3000"
            app:iss_placeholder="@color/black"
            app:iss_text_align="CENTER" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mom's Touch"
                android:fontFamily="@font/alex_brush"
                android:textColor="@color/teal_700"
                android:textSize="16sp" />


            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_margin="5dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3.5"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:padding="13dp"
            android:layout_marginTop="20dp"
            android:text="Maps "
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30sp" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="500dp"
                android:background="@drawable/maps_momstouch"
                ></ImageView>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse : "
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:textSize="20sp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:padding="13dp"
            android:layout_marginTop="20dp"

            android:text="About this place :"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:fontFamily="@font/adamina"
            android:textSize="16sp"
            android:layout_marginTop="20dp"

            android:text="Cosy friendly atmosphere where you can enjoy your meals with family/friends/couple, located in the center of old Medina."
            android:textColor="#050505" />


    </LinearLayout>
</ScrollView>